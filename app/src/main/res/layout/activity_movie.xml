<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkNavyBlue"
    android:orientation="vertical"
    tools:context=".ui.feature.movies.MovieActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarMovie"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    <ViewFlipper
        android:id="@+id/viewFlipperMovie"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="4dp">

        <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewMovie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:layoutManager="android.support.v7.widget.GridLayoutManager"
        tools:listitem="@layout/item_movie"
        tools:orientation="vertical"
        tools:spanCount="4" />

        <ProgressBar
        android:id="@+id/progressBarMovie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" />

        <include layout="@layout/partial_layout_error" />

    </ViewFlipper>
</LinearLayout>